<%-include('header')-%>

        <div class="box" id="heading">
            <h1><%= listTitle %></h1>
        </div>
        <div class="box">
            <% for (let newListItem of newListItems) { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= newListItem %></p>
                </div>
            <% } %>   
            <form action="/" method="post">
                <input type="text" name="newItem" placeholder="New Task" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
            </form>
        </div>
        
<%-include('footer')-%>